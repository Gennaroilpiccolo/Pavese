<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3E2207"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Pavese Hunt"
        android:textColor="#CBB18C"
        android:textSize="120px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.25" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="508dp"
        android:background="@drawable/buttonchange"
        android:text="Register"
        android:textColor="#F2BE5F"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="228dp"
        android:layout_height="204dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-80dp"
        android:src="@drawable/cerchi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
    <ImageView
        android:layout_width="228dp"
        android:layout_height="204dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-80dp"
        android:src="@drawable/cerchi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:layout_width="232dp"
        android:layout_height="229dp"
        android:layout_marginEnd="-116dp"
        android:layout_marginBottom="-25dp"
        android:src="@drawable/cerchi2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

    </ImageView>

    <ImageView
        android:layout_width="248dp"
        android:layout_height="204dp"
        android:layout_marginEnd="-16dp"
        android:layout_marginBottom="-125dp"
        android:src="@drawable/cerchi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

    </ImageView>

    <ImageView
        android:layout_width="232dp"
        android:layout_height="229dp"
        android:layout_marginStart="-116dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/cerchi2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:background="@drawable/username_text"
        android:hint="Username"
        android:textAlignment="center"
        android:textColorHint="#7B6A51"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="75dp"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@drawable/password"
        android:hint="Password"
        android:textAlignment="center"
        android:textColorHint="#7B6A51"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="75dp"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/password"
        android:hint="Email Address"
        android:textAlignment="center"
        android:textColorHint="#7B6A51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emailvector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="432dp"
        android:background="@drawable/baseline_alternate_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/baseline_lock_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>